

<hr />
<div class="container ng-cloak" ng-controller="MainCtrl">

    <nav class="navbar navbar-default" role="navigation">
        <form name="form-inline" class="navbar-form navbar-left" role="form" novalidate>
            <div class="form-group">
                <input type="text" id="country" class="form-control" placeholder="Please input country"
                       ng-model="country" required />
            </div>
            <div class="form-group" ng-show="showCityList">
                <select class="form-control" placeholder="List of Cities" name="citySelect" id="citySelect" ng-model="selectedCity" ng-change="populateWeather()">
                    <option ng-repeat="city in cities" value="{{city}}">{{city}}</option>
                </select>
            </div>
        </form>
    </nav>

    <table class="table table-hover">
        <tbody>
            <tr ng-repeat="d in weather">
                <td>{{d.key}}</td>
                <td>{{d.value}}</td>
            </tr>
        </tbody>
    </table>

    <div ng-show="error" class="alert alert-danger ng-cloak">
        <strong>Error Occured! </strong> <p>{{errorMessage}} </p>
        <small>{{detailErrorMessage}}</small>
    </div>
</div>




















































